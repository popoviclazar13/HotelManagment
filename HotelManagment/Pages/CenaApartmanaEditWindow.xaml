<Page x:Class="HotelManagment.Pages.CenaApartmanaEditWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotelManagment.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CenaApartmanaEditWindow" Background="#faf6f4">

    <Grid>
        <TextBlock Text="Ažuriranje Cene Apartmana" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,70,0,0">
            <TextBlock Text="Početni Datum:" Margin="5"/>
            <DatePicker x:Name="PocetniDatumPicker" Margin="5" Width="300"/>

            <TextBlock Text="Krajnji Datum:" Margin="5"/>
            <DatePicker x:Name="KrajnjiDatumPicker" Margin="5" Width="300"/>

            <TextBlock Text="Cena po noći:" Margin="5"/>
            <TextBox x:Name="CenaPoNociBox" Margin="5" Width="300"/>

            <TextBlock Text="Cena po osobi:" Margin="5"/>
            <TextBox x:Name="CenaPoOsobiBox" Margin="5" Width="300"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Sačuvaj" Width="100" Margin="5" Click="Save_Click"/>
                <Button Content="Nazad" Width="100" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
