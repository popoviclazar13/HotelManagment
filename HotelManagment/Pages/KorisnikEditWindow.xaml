<Page x:Class="HotelManagment.Pages.KorisnikEditWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotelManagment.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="KorisnikEditWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Ime i Prezime -->
        <TextBlock Text="Ime i Prezime:" Grid.Row="0" VerticalAlignment="Center" Grid.Column="0"/>
        <TextBox x:Name="FullNameTextBox" Grid.Row="0" Grid.Column="1" Margin="5,0,10,5" Width="200" HorizontalAlignment="Left"/>

        <!-- Telefon -->
        <TextBlock Text="Telefon:" Grid.Row="1" VerticalAlignment="Center" Grid.Column="0"/>
        <TextBox x:Name="PhoneTextBox" Grid.Row="1" Grid.Column="1" Margin="5,0,10,5" Width="200" HorizontalAlignment="Left"/>

        <!-- E-mail -->
        <TextBlock Text="E-mail:" Grid.Row="2" VerticalAlignment="Center" Grid.Column="0"/>
        <TextBox x:Name="EmailTextBox" Grid.Row="2" Grid.Column="1" Margin="5,0,10,5" Width="200" HorizontalAlignment="Left"/>

        <!-- Zemlja -->
        <TextBlock Text="Zemlja:" Grid.Row="3" VerticalAlignment="Center" Grid.Column="0"/>
        <ComboBox x:Name="CountryComboBox" Grid.Row="3" Grid.Column="1" Margin="5,0,10,5" Width="200" DisplayMemberPath="Name" HorizontalAlignment="Left"/>

        <!-- Sačuvaj dugme (desno poravnano) -->
        <Button Content="Sačuvaj" Click="SaveButton_Click" Width="100" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right" Margin="5"/>
    </Grid>
</Page>
