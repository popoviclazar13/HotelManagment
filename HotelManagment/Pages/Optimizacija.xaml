<Page x:Class="HotelManagment.Pages.Optimizacija"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotelManagment.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Optimizacija">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="700">

            <!-- Naslov centriran -->
            <TextBlock Text="Optimizacija"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

            <!-- Odabir datuma -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Od:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <DatePicker x:Name="DatumOdPicker" Margin="0,0,20,0"/>
                <TextBlock Text="Do:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <DatePicker x:Name="DatumDoPicker"/>
            </StackPanel>

            <!-- Lista apartmana bez opisa -->
            <StackPanel Margin="-400,0,0,10">
                <!-- Dodata gornja margina -->
                <Border BorderBrush="Gray" BorderThickness="1" Height="120" Width="200">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="ApartmaniListBox"
                     SelectionMode="Multiple"
                     DisplayMemberPath="nazivApartmana"/>
                    </ScrollViewer>
                </Border>
            </StackPanel>

            <!-- Dugme -->
            <Button Content="Generiši predloge"
                Width="150"
                Height="30"
                HorizontalAlignment="Left"
                Margin="25,0,0,20"
                Click="GenerisiPredloge_Click"/>

            <!-- Tabela predloga -->
            <DataGrid x:Name="PredloziDataGrid"
                  AutoGenerateColumns="False"
                  Height="300"
                  Width="650"
                  Margin="0,0,0,20">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Rezervacija ID" Binding="{Binding RezervacijaId}" Width="*"/>
                    <DataGridTextColumn Header="Apartman" Binding="{Binding ApartmanNaziv}" Width="*"/>
                    <DataGridTextColumn Header="Stari period" Binding="{Binding StariPeriod}" Width="*"/>
                    <DataGridTextColumn Header="Novi period" Binding="{Binding NoviPeriod}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
    </ScrollViewer>
</Page>
